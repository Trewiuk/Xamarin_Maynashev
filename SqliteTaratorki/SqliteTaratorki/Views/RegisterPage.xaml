<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqliteTaratorki.Views.RegisterPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             >
    <ContentPage.Content>
        
            <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                <Label Text="Регистрация" FontAttributes="Bold" FontSize="20" Padding="30" HorizontalOptions="Center"/>
                <Entry x:Name="TxtName" Placeholder="Имя" Margin="0,5,0,5"/>
                <Entry x:Name="TxtLogin" Placeholder="Логин" Margin="0,5,0,5"/>

            <Entry x:Name="TxtPassword" IsPassword="True" Placeholder="Пароль" Margin="0,5,0,5"/>
                <Button VerticalOptions="Center" Text="Зарегистрироваться" Clicked="Button_Clicked" Margin="0,10,0,10" CornerRadius="20"/>
                <Label TextColor="Black" Text="назад" HorizontalOptions="Center" Padding="20">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
       
    </ContentPage.Content>
</ContentPage>